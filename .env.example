# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-api-key-here

# API Settings (Optional - defaults provided)
API_TIMEOUT=60
MAX_RETRIES=3
RETRY_DELAY=1
REQUESTS_PER_MINUTE=60
TOKENS_PER_MINUTE=150000

# Model Configuration (Optional)
COMPLETION_MODEL=gpt-4o
FAST_COMPLETION_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
COMPLETION_TEMPERATURE=0.7
COMPLETION_MAX_TOKENS=1000

# Processing Configuration (Optional)
BATCH_SIZE=20
EMBEDDING_BATCH_SIZE=100
SEMANTIC_SEARCH_TOP_K=30
NUM_DYNAMIC_SPECS=5
NUM_TOPICS=5
NUM_QUESTIONS=5
SAMPLE_COMMENTS_FOR_HYPOTHESIS=10
MIN_COMMENT_LENGTH=10
ENABLE_CACHING=true
CACHE_DIR=./cache

# Orphaned Comment Reassignment Configuration (Optional)
# WARNING: Orphaned comments may not belong to videos in your dataset!
# They could be replies to other comments or from completely different videos.
# Reassignment may introduce noise. Use with caution.
ENABLE_ORPHAN_REASSIGNMENT=true
# High threshold (0.85) reduces false positives but doesn't eliminate them
SEMANTIC_SIMILARITY_THRESHOLD=0.85
CREATE_UNASSIGNED_VIDEO=true
# RECOMMENDED: Skip reassigned comments in analytics to avoid contamination
SKIP_REASSIGNED_IN_ANALYTICS=true
SKIP_UNASSIGNED_IN_ANALYTICS=true

# Output Configuration (Optional)
OUTPUT_BASE_DIR=./output
RESULTS_FILENAME=results.json
METADATA_FILENAME=metadata.json
VISUALIZATION_FILENAME=index.html
ENABLE_VISUALIZATION=true

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
